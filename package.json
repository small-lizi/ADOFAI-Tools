{
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "name": "adofai-tools",
  "version": "1.4.2",
  "main": "main.js",
  "keywords": [],
  "author": "lizi",
  "license": "MIT",
  "description": "ADOFAI Tools - A toolset for ADOFAI players",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-dl": "^4.0.0",
    "extract-zip": "^2.0.1",
    "node-fetch": "^2.7.0"
  },
  "build": {
    "appId": "com.lizi.adofaitools",
    "productName": "ADOFAI Tools",
    "copyright": "Copyright Â© 2024 lizi",
    "asar": true,
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/*.d.ts",
      "!**/node_modules/.bin",
      "!**/*.{iml,o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon/adofai_tools.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "ADOFAI Tools",
      "installerIcon": "assets/icon/adofai_tools.ico",
      "uninstallerIcon": "assets/icon/adofai_tools.ico",
      "installerHeaderIcon": "assets/icon/adofai_tools.ico",
      "deleteAppDataOnUninstall": false,
      "include": "installer.nsh"
    },
    "extraFiles": [
      {
        "from": "asar_update.bat",
        "to": "asar_update.bat",
        "filter": ["**/*"]
      }
    ]
  }
}
