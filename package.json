{
  "name": "adofai-tools",
  "version": "1.6.7",
  "description": "ADOFAI Tools - A Rhythm Game Tool Collection",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "make-icns": "node scripts/make-icns.js",
    "build:win": "electron-builder build --win --publish never",
    "build:mac": "npm run make-icns && electron-builder --mac",
    "dist": "electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "author": {
    "name": "MemSys_Lizi",
    "email": "001@memsyslizi.site"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.2.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "adm-zip": "^0.5.10",
    "axios": "^1.6.5"
  },
  "build": {
    "appId": "cn.memsyslizi.adofaitools",
    "productName": "ADOFAI Tools",
    "copyright": "Copyright Â© 2024 MemSys_Lizi",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "win": {
      "icon": "assets/img/icon.ico",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "mac": {
      "category": "public.app-category.developer-tools",
      "icon": "build/icon.icns",
      "target": [
        "dmg",
        "zip"
      ],
      "darkModeSupport": true,
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist"
    },
    "dmg": {
      "icon": "build/icon.icns",
      "iconSize": 128,
      "contents": [
        {
          "x": 380,
          "y": 240,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 122,
          "y": 240,
          "type": "file"
        }
      ],
      "window": {
        "width": 540,
        "height": 380
      }
    },
    "protocols": {
      "name": "ADOFAI Tools URL",
      "schemes": [
        "adofaitools"
      ]
    }
  }
}
